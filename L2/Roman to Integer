class Solution:
    def romanToInt(self, s: str) -> int:
        roman={'I':1,"V":5,"X":10,"L":50,"C":100,"D":500,"M":1000}
        total_value=0
        pre_value=0
        
        s=s.upper()
        rom=reversed(s)

        for i in rom:
            value=roman[i]
            if value<pre_value:
                total_value=total_value-value
                pre_value=value
            else:
                total_value+=value
                pre_value=value

        return total_value
